
@{  ViewBag.Title = "Service Master";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
@section css{
    @Styles.Render("~/ServiceMaster-CSS")
}
<div class="panel panel-inverse" id="main-panel">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand">
                <i class="fa fa-expand"></i>
            </a>
        </div>
        <h4 class="panel-title">  @ViewBag.Title</h4>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-3 m-b-5 ReadAndWrite">
                        <button type="button" id="btnAdd" class="btn btn-sm btn-primary btn-block "><span class="fa fa-plus"></span><span class="btnLabel" id="btnAddLabel"> Add</span></button>
                    </div>
                    <div class="col-sm-3 m-b-5 ReadAndWrite">
                        <button type="button" id="btnEdit" class="btn btn-sm btn-info btn-block " disabled><span class="fa fa-edit"></span><span class="btnLabel" id="btnEditLabel"> Edit</span></button>
                    </div>
                    <div class="col-sm-3 m-b-5 DeleteEnabled">
                        <button type="button" id="btnDelete" class="btn btn-sm btn-danger btn-block " disabled><span class="fa fa-trash-alt"></span><span class="btnLabel" id="btnDeleteLabel"> Delete</span></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive" style="padding-top:10px;">
            <table id="tblService" class="table table-bordered tbl-100p" data-adjust="-30"></table>
        </div>
    </div>
</div>
<div class="modal fade " id="mdlService" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-xl" id="" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="mdlServiceTitle"> Create Service</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form data-parsley-validate="true" id="frmService">
                <div class="modal-body">
                    <div id="divForm">
                        <div class="row ">
                            <div class="col-sm-6">
                                <div class="input-group input-group-sm m-b-5">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" style="width:110px;"><span id="lblServiceID">Service Name </span><span class="text-danger asteris-requiered">*</span></label>
                                    </div>
                                    <input type="text" id="ServiceName" name="ServiceName" class="form-control input" data-parsley-required data-parsley-maxlength="100" maxlength="100" data-parsley-errors-container="#err-ServiceName" autocomplete="off">
                                </div>
                                <div id="err-ServiceName"></div>
                            </div>
                            <div class="col-sm-6">
                                <div class="input-group input-group-sm m-b-5">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" style="width:110px;"><span id="lblFirstName">Duration </span><span class="text-danger asteris-requiered">*</span></label>
                                    </div>
                                    <input type="text" id="DurationFrom" name="DurationFrom" class="form-control input time-format" style="width:30%" data-parsley-maxlength="5" maxlength="5" data-parsley-errors-container="#err-DurationFrom" data-parsley-required autocomplete="off">
                                    <input type="text" id="DurationTo" name="DurationTo" class="form-control input time-format" style="width:30%" data-parsley-maxlength="5" maxlength="5" data-parsley-errors-container="#err-DurationTo" data-parsley-required autocomplete="off"> -
                                </div>
                                <div id="err-DurationTo"></div>
                                <div id="err-DurationFrom"></div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-sm-6">
                                <div class="input-group input-group-sm m-b-5">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" style="width:110px;"><span id="lblMiddleName">Amount</span><span class="text-danger asteris-requiered">*</span></label>
                                    </div>
                                    <input type="text" id="Amount" name="Amount" class="form-control input decimal-format" data-parsley-errors-container="#err-Amount" data-parsley-required autocomplete="off">
                                </div>
                                <div id="err-Amount"></div>
                            </div>
                            <div class="col-sm-6">
                                <div class="input-group input-group-sm mb-1">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" style="width:110px;"><span>Position</span><span class="text-danger asteris-requiered">*</span></label>
                                    </div>
                                    <select class="form-control input selectpicker selectpicker-sm clear" style="width: 50%" id="Position" name="Position" data-parsley-required data-parsley-errors-container="#err-Position"></select>
                                </div>
                                <div id="err-Position"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="ID" name="ID" class="input">
                    <div class="ReadAndWrite">
                        <button type="submit" class="btn btn-primary" id="btnSave"> <span class="fa fa-save"></span> <span class="btnLabel btnSaveLabel"> Save</span></button>
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><span class="fa fa-times"></span> <span class="btnLabel btnCloseLabel"> Close</span></button>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/ServiceMaster-JS")
}